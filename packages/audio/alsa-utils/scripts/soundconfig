# setup alsa (especially the mixer config)

# find soundcard module
module=`cat "/proc/asound/modules" | sed -e 's/.*snd_\(.*\).*/\1/'`
# find xbmc sound output style
#sound_output=`cat ~/.xbmc/temp/xbmc.log | grep 'INFO: Using'  | sed -e 's/.*INFO: Using \(.*\) .*/\1/'`
## OR
sound_output=`cat ~/.xbmc/userdata/guisettings.xml | grep '<mode>[0-9]</mode>'  | sed 's/[^0-9]*//g'`

mixer() {
  parm=${4:-on}
  amixer -c "$1" sset "$2" "$3" $parm >/dev/null 2>&1
  amixer -c "$1" sset "$2" $parm >/dev/null 2>&1
}

(
. /etc/profile

progress "Setting up sound card"

if [ -f $HOME/.config/sound.conf ]; then

  alsactl restore -f $HOME/.config/sound.conf

else
  # if soundcard module is ca0106
  if test "${module}" = "ca0106" ; then
    # if XBMC sound output analog
    if test "${sound_output}" = "0" ; then
      # CA0106 Analog Output
      mixer 0 'IEC958',0 off off
      mixer 0 'Master',0 90%
      mixer 0 'Analog Center/LFE',0 80%
      mixer 0 'Analog Front',0 80%
      mixer 0 'Analog Rear',0 80%
      mixer 0 'Analog Side',0 80%
    fi
    else
      # CA0106 Digital Output
      mixer 0 'IEC958',0 on on
      mixer 0 'Master',0 90%
      mixer 0 'IEC958 Center/LFE',0 80%
      mixer 0 'IEC958 Front',0 80%
      mixer 0 'IEC958 Rear',0 80%
      mixer 0 'IEC958 Unknown',0 80%
  fi
fi

exit 0
)&
