PKG_PRIORITY="optional"
PKG_SECTION="service/dyndns"
PKG_SHORTDESC="inadyn: is a free DynDNS client"
PKG_LONGDESC="INADYN is a free DynDNS client. It gives the possibility to have your own fixed hostname registered on the internet, although your IP might be changing. Supports the following dynamic DNS services: dyndns.org (in all three flavors: dynamic, static, custom), freedns.afraid.org, zoneedit.com, no-ip.com"

PKG_IS_ADDON="yes"
PKG_ADDON_TYPE="xbmc.service"

