. config/options $1

cd $PKG_BUILD

ADDON_DIR="/storage/.xbmc/addons/shell.filemanager.mc"

export LDFLAGS="$LDFLAGS -ldl"

./configure --host=$TARGET_NAME \
            --build=$HOST_NAME \
            --prefix=$ADDON_DIR \
            --exec-prefix=$ADDON_DIR \
            --without-diff-viewer \
            --without-gpm-mouse \
	          --disable-vfs-cpio \
	          --disable-vfs-fish \
	          --disable-vfs-sfs \
	          --without-mmap \
            --without-subshell \
            --without-x \
            --disable-background \
            --with-screen=ncurses

make LDFLAGS="-ltinfo"
